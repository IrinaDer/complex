mixin logging-item(type, img, event, info, time, date)
    tr.logging-icon(class=type)
        td
            .logging-event
                .logging-img
                    img(src=img)._svg
                .event #{event} 
        td  
            .logging-info #{info}
        td 
            .logging-calendar
                span.logging-time #{time}
                span.logging-date #{date}

